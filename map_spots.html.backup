        function addSearchRadiusCircle(centerLat, centerLon, radiusKm) {
            if (!leafletMap || typeof L === 'undefined') return;
            
            // Add search radius circle to Leaflet map
            const circle = L.circle(
                [centerLat, centerLon],
                {
                    radius: radiusKm * 1000, // Convert km to meters
                    color: '#007bff',
                    fillColor: '#007bff',
                    fillOpacity: 0.2,
                    weight: 2
                }
            ).addTo(leafletMap)
            .bindPopup(`Search Radius: ${radiusKm} km`);
            
            leafletMarkers.push(circle);
        }
        
        async function loadNoFlyZones(lat, lon, radiusKm) {
            try {
                const response = await fetch(`${API_BASE_URL}/no-fly-zones?latitude=${lat}&longitude=${lon}&radius_km=${radiusKm * 2}`);
                const data = await response.json();
                
                const polygons = [];
                
                // Create circles for airports (5km radius)
                data.no_fly_zones?.airports?.forEach(airport => {
                    const circlePoints = [];
                    const numPoints = 32;
                    const radiusDeg = 5 / 111; // 5km radius
                    
                    for (let i = 0; i <= numPoints; i++) {
                        const angle = (i / numPoints) * 2 * Math.PI;
                        const aLat = airport.lat + radiusDeg * Math.cos(angle);
                        const aLon = airport.lon + (radiusDeg / Math.cos(airport.lat * Math.PI / 180)) * Math.sin(angle);
                        circlePoints.push([aLon, aLat]);
                    }
                    
                    polygons.push({
                        type: 'Feature',
                        geometry: {
                            type: 'Polygon',
                            coordinates: [circlePoints]
                        },
                        properties: {
                            name: airport.name || 'Airport',
                            color: 'rgba(255,0,0,0.4)',
                            type: 'airport'
                        }
                    });
                });
                
                // Create circles for military areas (3km radius)
                data.no_fly_zones?.military_areas?.forEach(military => {
                    const circlePoints = [];
                    const numPoints = 32;
                    const radiusDeg = 3 / 111; // 3km radius
                    
                    for (let i = 0; i <= numPoints; i++) {
                        const angle = (i / numPoints) * 2 * Math.PI;
                        const mLat = military.lat + radiusDeg * Math.cos(angle);
                        const mLon = military.lon + (radiusDeg / Math.cos(military.lat * Math.PI / 180)) * Math.sin(angle);
                        circlePoints.push([mLon, mLat]);
                    }
                    
                    polygons.push({
                        type: 'Feature',
                        geometry: {
                            type: 'Polygon',
                            coordinates: [circlePoints]
                        },
                        properties: {
                            name: military.name || 'Military Area',
                            color: 'rgba(255,100,0,0.4)',
                            type: 'military'
                        }
                    });
                });
                
                noFlyZonePolygons = polygons;
                
                // Add to Leaflet map
                if (leafletMap && typeof L !== 'undefined') {
                    polygons.forEach(poly => {
                        const coords = poly.geometry.coordinates[0].map(coord => [coord[1], coord[0]]);
                        
                        const polygon = L.polygon(coords, {
                            color: poly.properties.color,
                            fillColor: poly.properties.color,
                            fillOpacity: 0.35,
                            weight: 2
                        }).addTo(leafletMap)
                        .bindPopup(`<strong>${poly.properties.name}</strong><br>No-Fly Zone`);
                        
                        leafletMarkers.push(polygon);
                    });
                }
            } catch (error) {
                console.error('Error loading no-fly zones:', error);
            }
        }
        
