        function filterSpots() {
            const searchQuery = document.getElementById('searchInput').value.toLowerCase().trim();
            const searchInfo = document.getElementById('searchResultsInfo');
            
            if (!spotsData || !spotsData.spots) {
                return;
            }
            
            if (!searchQuery) {
                // Show all spots
                filteredSpots = [...allSpots];
                searchInfo.style.display = 'none';
            } else {
                // Filter spots based on search query
                filteredSpots = allSpots.filter(spot => {
                    const name = (spot.name || 'Unnamed Location').toLowerCase();
                    const address = (spot.address || '').toLowerCase();
                    const terrain = (spot.terrain_type || '').toLowerCase();
                    const spotType = (spot.spot_type || '').toLowerCase();
                    const safetyScore = spot.safety_score.toString();
                    const distance = spot.distance_km ? spot.distance_km.toString() : '';
                    const elevation = spot.elevation_m ? spot.elevation_m.toString() : '';
                    
                    return name.includes(searchQuery) ||
                           address.includes(searchQuery) ||
                           terrain.includes(searchQuery) ||
                           spotType.includes(searchQuery) ||
                           safetyScore.includes(searchQuery) ||
                           distance.includes(searchQuery) ||
                           elevation.includes(searchQuery);
                });
                
                // Show search results info
                searchInfo.style.display = 'block';
                if (filteredSpots.length === 0) {
                    searchInfo.textContent = `No spots found matching "${searchQuery}"`;
                    searchInfo.style.color = '#dc3545';
                } else {
                    searchInfo.textContent = `Found ${filteredSpots.length} of ${allSpots.length} spots`;
                    searchInfo.style.color = '#666';
                }
            }
            
            // Update sidebar display
            displayFilteredSpots();
            
            // Update map markers visibility
            updateMapMarkersVisibility();
        }
        
